@namespace EccomercePage.Components

@* Parameters *@
@code {
    [Parameter] required public RenderFragment ChildContent { get; set; }
    [Parameter] public string Size { get; set; } = "lg";
}

@switch (Size.ToLower())
{
    case "lg":
        <h1 class="text-5xl font-extrabold dark:text-white"> @ChildContent </h1>
        break;
    case "xl":
        <h2 class="text-4xl font-extrabold dark:text-white"> @ChildContent </h2>
        break;
    case "md":
        <h3 class="text-3xl font-extrabold dark:text-white"> @ChildContent </h3>
        break;
    case "sm":
        <h4 class="text-2xl font-extrabold dark:text-white"> @ChildContent </h4>
        break;
    case "xs":
        <h5 class="text-xl font-extrabold dark:text-white"> @ChildContent </h5>
        break;
    default:
        <h6 class="text-lg font-extrabold dark:text-white"> @ChildContent </h6>
        break;
}
